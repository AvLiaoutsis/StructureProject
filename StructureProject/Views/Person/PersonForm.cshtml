@model StructureProject.ViewModels.PersonFormViewModel


<h2>Change Profile</h2>

@using (Html.BeginForm("Save", "Person"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Please fix the following Errors!!")
    <div class="form-group">
        @Html.LabelFor(v => v.Person.Name)
        @Html.TextBoxFor(v => v.Person.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Person.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.Person.LastName)
        @Html.TextBoxFor(v => v.Person.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Person.LastName)
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.Person.BirthDate)
        @Html.TextBoxFor(v => v.Person.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Person.BirthDate)

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Person.Description)
        @Html.TextAreaFor(model => model.Person.Description, new { @class = "form-control", @cols = "100", @rows = "8", @style = "resize: none; max-width:7000px;" })
    </div>
    @Html.HiddenFor(v => v.Person.Id)

    <button type="submit" class="btn btn-secondary">Save</button>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
