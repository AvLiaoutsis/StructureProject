@model StructureProject.Models.Mail
@using StructureProject.Models


<div class="jumbotron jumbotron-sm">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-lg-12">
				<h1 class="h1">
					Contact us <small>Feel free to contact us</small>
				</h1>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-8">
			<div class="well well-sm">
				@using (Html.BeginForm("Send", "Manage"))
				{
					@Html.AntiForgeryToken()

					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label for="name">
									Name
								</label>
								@*<input type="text" class="form-control" id="name" placeholder="Enter name" required="required" />*@
								@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter name", @required = "required" } })

							</div>
							<div class="form-group">
								<label for="email">
									Email Address
								</label>
								<div class="input-group">
									<span class="input-group-addon">
										<span class="glyphicon glyphicon-envelope"></span>
									</span>
									@*<input type="email" class="form-control" id="email" placeholder="Enter email" required="required" />*@
									@Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter email", @required = "required" } })

								</div>
							</div>
							<div class="form-group">
								<label for="subject">
									Subject
								</label>
								@Html.DropDownListFor(m => m.Subject, new SelectList(Enum.GetValues(typeof(Topics))), "Select Subject", new { @class = "form-control" })

								@*<select id="subject" name="subject" class="form-control" required="required">
							<option value="na" selected="">Choose One:</option>
							<option value="service">General Customer Service</option>
							<option value="suggestions">Suggestions</option>
							<option value="product">Product Support</option>
						</select>*@
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label for="name">
									Message
								</label>
								@*<textarea name="message" id="message" class="form-control" rows="9" cols="25" required="required"
						placeholder="Message">*@
								@*@Html.TextAreaFor(model => model.Message, new { htmlAttributes = new { @class = "form-control", @rows = "9", @cols = "25", @required = "required" } })*@
								@Html.TextAreaFor(model => model.Message, new { @class = "form-control", @cols = "100", @rows = "8", @style = "resize: none; max-width:7000px;" })

								@*</textarea>*@
							</div>
						</div>
						<div class="col-md-12">
							<button type="submit" class="btn btn-primary pull-right" id="btnContactUs">
								Send Message
							</button>
						</div>
					</div>


				}
			</div>
		</div>
		<div class="col-md-4">
			<form>
				<legend><span class="glyphicon glyphicon-globe"></span> Our office</legend>
				<address>
					<strong>PetAir, Inc.</strong><br>
					Panepistimiou 39 Ave, Suite 600<br>
					Athens, Gr 94107<br>
					<abbr title="Phone">
						P:
					</abbr>
					(210) 456-7890
				</address>
				<address>
					<strong>Full Name</strong><br>
					<a href="mailto:#">info@PetAir.com</a>
				</address>
			</form>
		</div>
	</div>
</div>
