                            <button id="Btn-Reject-@reservation.Id" data-host-id="@reservation.Host.Id" data-pet-id="@reservation.Pet.Id" data-customer-id="@reservation.Customer.Id" data-reservation-id="@reservation.Id" class="btn btn-default btn-sm js-toggle-reject">Reject</button>
